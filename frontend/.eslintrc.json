{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "jest"],
  "rules": {
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "jsxSingleQuote": true, "endOfLine": "auto" }
    ],
    "object-curly-newline": "off",
    "quotes": [0, "prefer-single"]
  }
}
